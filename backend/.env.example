# Best Buy API Configuration
BESTBUY_API_KEY=your_bestbuy_api_key_here

# RapidAPI Configuration (Optional - for fallback data sources)
RAPIDAPI_KEY=your_rapidapi_key_here

# OpenAI API Configuration (for LLM features)
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Database Configuration
DATABASE_URL=sqlite:///cache.db

# API Configuration
API_BASE_URL=http://localhost:8000

# Cache Configuration
CACHE_TTL_PRODUCTS=3600        # 1 hour
CACHE_TTL_SEARCH=1800          # 30 minutes
CACHE_TTL_REVIEWS=14400        # 4 hours

# Rate Limiting Configuration
BESTBUY_RATE_LIMIT=4           # requests per second (conservative)
RAPIDAPI_RATE_LIMIT=10         # requests per second

# Data Refresh Configuration
DATA_REFRESH_INTERVAL_HOURS=6  # How often to refresh cached data

# Environment
NODE_ENV=development